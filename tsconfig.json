{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "newLine": "LF",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "paths": {
      "minditor": ["src"],
      "@test": ["tests"]
    }
  },
  "include": [
    "global.d.ts",
    "src",
    "jsx.d.ts",
    "experiment/**/*",
    "editor.tsx",
    "tests/**/*",
    "index.tsx",
    "dev.tsx",
    "react.tsx",
    "react-calendar.tsx",
    "readme.tsx",
    "site/**/*",
    "__test__/**/*",
  ],

}
